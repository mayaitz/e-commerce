generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id     Int     @id @default(autoincrement())
  firstName String @db.VarChar(50)
  lastName String @db.VarChar(50)
  creditCard CreditCard?
  address Address?
  email String @unique
  phoneNumber Int?
  password String 
  orders Order[]
  cartItems CartItem[]
  profileURL String?
}

model Address {
  id     Int     @id @default(autoincrement())
  country String
  city String
  street String
  houseNumber Int
  floor Int?
  apartment Int?
  user User @relation(fields: [userID], references: [id], onDelete: Cascade) 
  userID Int @unique
}

model CreditCard {
  id     Int     @id @default(autoincrement())
  cvc Int @db.SmallInt
  creditNumber BigInt
  experationDate DateTime
  user User @relation(fields: [userID], references: [id], onDelete: Cascade) 
  userID Int @unique
}

model Order {
  id     Int     @id @default(autoincrement())
  date DateTime  @default(now())
  buyer User @relation(fields: [buyerID], references:[id])
  buyerID Int
  status Status @default(preparing)
  items OrderItem[]
}

enum Status {
  preparing
  readyForDelivery
  delivering
  reachedDestination
}

model Product {
  id     Int     @id @default(autoincrement())
  title String @db.VarChar(100)
  stock Int
  price Float
  description String
  imageURL String
  orderItems OrderItem[]
  cartItems CartItem[]
}

model OrderItem {
  order Order @relation(fields: [orderID], references: [id], onDelete: Cascade)
  orderID Int
  product Product @relation(fields: [productID], references: [id], onDelete: Cascade)
  productID Int
  quantity Int
  note String?

  @@id([orderID, productID])
}

model CartItem {
  user User @relation(fields: [userID], references: [id], onDelete: Cascade)
  userID Int
  product Product @relation(fields: [productID], references: [id], onDelete: Cascade)
  productID Int
  quantity Int
  note String?

  @@id([userID, productID])
}